<%= turbo_frame_tag dom_id(postit) do %>
    <div class="border border-info rounded-2 p-3 my-2" style="background-color: <%= postit.color %>">
        <div class="d-flex flex-row justify-content-between">
            <p><b><%= postit.name %></b> <small class="text-danger"><%= "(#{postit.game_step.name})" if postit.game_step %></small> </p>
            <div class="d-flex flex-row ">
                <%= button_to "Supprimer", game_postit_path(postit.game, postit), method: :delete, class: 'btn btn-sm btn-danger mx-1', form: { data: { turbo_confirm: "Are you sure?" } }%>
            </div>
        </div>
        <p><%= postit.description %></p>
    </div>
<% end %>