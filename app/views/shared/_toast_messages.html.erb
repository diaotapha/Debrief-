<div class="toast mb-2" role="alert" aria-live="assertive" aria-atomic="true" data-controller="toast" data-bs-delay="3000">
  <div class="toast-header">
    <!--<img src="..." class="rounded me-2" alt="...">-->
    <strong class="me-auto <%= toast_text_type_class %>"><%= title %></strong>
    <!--<small>11 mins ago</small>-->
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    <%= message %>
  </div>
</div>