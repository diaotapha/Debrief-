<%= render "shared/header" %>

    <div class="d-flex align-items-center justify-content-center">
        <div class="card my-5 w-50 bg-light">
            <div class="card-body">
                <h5 class="card-title text-center">
                    <%= @game.title %>
                </h5>
            </div>
        </div>
    </div>

    <!-- Body -->

    <%= turbo_stream_from "game_#{ @game.id }" %>

    <div class="d-flex justify-content-between align-items-start bg-light vw-100 border border-secondary py-5">

        <div class="d-flex align-items-center justify-content-center flex-column w-100">
            <h1>Liste des postits</h1>
            <div class="col-12 mt-3" style="max-height: 550px; overflow:auto">
                <div class="row mx-5" id="game_<%= @game.id %>">
                    <%= render @postits  %>
                </div>
            </div>
        </div>

        <div class="d-flex align-items-center justify-content-center flex-column w-100">
            <h1 class="mb-4">New Postit</h1>
                <%= render 'postits/form', postit: @postit, game: @game %>
            </div>
        </div>
    </div>
